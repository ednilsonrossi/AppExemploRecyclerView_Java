<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_droid"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_android"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Elemento"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/image_droid"
        app:layout_constraintTop_toTopOf="@+id/image_droid" />

    <TextView
        android:id="@+id/textview_sequencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textview_titulo"
        app:layout_constraintTop_toBottomOf="@+id/textview_titulo" />

    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textview_titulo" />
</androidx.constraintlayout.widget.ConstraintLayout>